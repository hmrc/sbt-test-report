{
  "name": "sbt-test-report",
  "version": "1.0.0",
  "description": "A plugin for test reports at HMRC.",
  "main": "prepare.js",
  "scripts": {
    "start": "npm-run-all --sequential prepare server",
    "prepare": "node prepare.js",
    "server": "node server.js"
  },
  "nodemonConfig": {
    "watch": [
      "src/main/resources"
    ],
    "ignore": [
      "node_modules",
      "src/main/resources/assets/data.js"
    ],
    "delay": "1000ms",
    "ext": "js,json,html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hmrc/sbt-test-report.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hmrc/sbt-test-report/issues"
  },
  "homepage": "https://github.com/hmrc/sbt-test-report#readme",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "lite-server": "^2.6.1",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "wait-on": "^7.0.1"
  }
}
